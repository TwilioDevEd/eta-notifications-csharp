@model List<ETANotifications.Models.Order>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row" id="order-index-header">
        <div class="col-md-1 col-1">
            <span class="order-index-title">ORDERS</span>
        </div>
        <div class="col-md-10 col-10 text-center">
            <img id="order-index-icon" src="@Url.Content("~/Content/img/small-logo.png")" />
        </div>
    </div>
    <div class=row>
        <div class="col-12 no-padding">
            <div class="list-group list-special">
                @foreach (var order in Model)
                {
                    <a href="@Url.Action("Details", new {id = order.Id})" class="list-group-item list-special-item">
                        <div class="row">
                            <div class="col-8 text-uppercase">
                                @order.CustomerName
                            </div>
                            <div class="col-3 index-status text-uppercase">
                                @order.Status
                            </div>
                            <div class="col-1">
                                <i class="fa fa-caret-right"></i>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>
