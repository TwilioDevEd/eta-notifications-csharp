@model ETANotifications.Models.Order

@{
    ViewBag.Title = Model.CustomerName + "'s Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row" id="order-index-header">
        <div class="col-md-4 col-4">
            <a href="@Url.Action("Index", "Orders")"><i class="fa fa-caret-left order-index-title"></i><span class="order-index-title">BACK</span></a>
        </div>
        <div class="col-md-4 col-4 text-center">
            <img id="order-index-icon" src="@Url.Content("~/Content/img/small-logo.png")"/>
        </div>
    </div>
    <div class="row">
        <div id="house-image" class="col-md-7 col-7 no-padding">
            <p id="customer-name-p">@Model.CustomerName</p>
        </div>
        <div id="location-image" class="col-md-5 col-5 no-padding"></div>
    </div>
    <div id="show-info-row" class="row">
        <div class="col-6 no-padding">
            Status: <span class="index-status text-uppercase">@Model.Status</span>
        </div>
        <div class="col-6 no-padding">
            Notification: <span class="index-status text-uppercase">@Model.NotificationStatus</span>
        </div>
    </div>
    <div class="row show-button-row">
        <div class="col-12 text-center">
            @using (Html.BeginForm("Pickup", "Orders", new { id = Model.Id }, FormMethod.Post))
            {
                <button type="submit" class="btn show-button">
                    <div class="row">
                        <div class="col-3 text-center">
                            <img id="order-index-icon" src="@Url.Content("~/Content/img/small-logo.png")" />
                        </div>
                        <div class="col-6 text-center">
                            PICK-UP
                        </div>
                    </div>
                </button>
            }
        </div>
    </div>
    <div class="row show-button-row">
        <div class="col-12 text-center">
            @using (Html.BeginForm("Deliver", "Orders", new { id = Model.Id }, FormMethod.Post))
            {
                <button type="submit" class="btn show-button">
                    <div class="row">
                        <div class="col-6 offset-3 text-center">
                            DELIVER
                        </div>
                        <div class="col-3 text-center">
                            <i class="fa fa-bicycle"></i>
                        </div>
                    </div>
                </button>
            }
        </div>
    </div>
</div>
